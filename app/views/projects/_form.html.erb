
<div  class="projectForm">
<div class="projectFormContainer">
<%= form_for(@project) do |f| %>

	<% if @project.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@project.errors.count, "error") %>
							No hemos podido guardar por: </h2>

				<ul>
					<% @project.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
		</div>
	<% end %>	

	<div>
		<%= f.label :name, "Nombre" %><br>
		<%= f.text_field :name, :placeholder => "Nombre" %>
	</div>
	<div>
		<%= f.label :issue, "Problema" %><br>
		<%= f.text_area :issue, :placeholder => "Problema" %>
	</div>
	<div>
		<%= f.label :sector, "Sector" %><br>
		<%= f.text_field :sector, :placeholder => "Contacto" %>
	</div>
	<div>
		<%= f.label :phone, "Teléfono" %><br>
		<%= f.text_field :phone, :placeholder => "Teléfono" %>
	</div>
	<div>
		<%= f.label :email, "Correo Electrónico" %><br>
		<%= f.text_field :email, :placeholder => "Email" %>
	</div>
	<div>
		<%= f.label :album, "Álbum de Facebook" %><br>
		<%= f.text_field :album, :placeholder => "Álbum de Facebook" %>
	</div>
	<div>
		<%= f.label :image, "Imagen" %><br>
		<%= f.text_field :image, :placeholder => "Imagen" %>
	</div>

	<div class="button"><%= f.submit(@project.new_record? ? "Crear Proyecto" : "Modificar Proyecto") %></div>
<% end %>

</div>	
</div>